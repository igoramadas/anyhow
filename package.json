{
    "name": "anyhow",
    "version": "3.3.0",
    "description": "Drop-in wrapper for Winston, Bunyan, Pino and console logs.",
    "keywords": [
        "anyhow",
        "bunyan",
        "console",
        "gcloud",
        "log",
        "logger",
        "logging",
        "pino",
        "syslog",
        "stackdriver",
        "winston"
    ],
    "author": "Igor Ramadas <igor@devv.com>",
    "homepage": "https://anyhow.devv.com",
    "subdomain": "anyhow",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/igoramadas/anyhow.git"
    },
    "engines": {
        "node": ">= 12.0"
    },
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "build-test": "tsc -p tsconfig-test.json",
        "clean": "rm -rf ./lib && rm -rf ./lib-test",
        "prebuild": "npm run clean",
        "docs": "typedoc",
        "test": "npm run build-test && mocha ./test/*.ts",
        "test-coverage": "nyc --reporter=lcov npm test"
    },
    "devDependencies": {
        "@google-cloud/logging": "^10.4.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.0.0",
        "axios": "^1.4.0",
        "bent": "^7.3.12",
        "bunyan": "^1.8.15",
        "capture-console": "^1.0.1",
        "chai": "<5.0.0",
        "chalk": "<5.0.0",
        "coveralls": "^3.1.1",
        "mocha": "^10.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^15.1.0",
        "pino": "^8.12.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.6",
        "typescript": "^5.0.4",
        "winston": "^3.8.2"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "arrowParens": "always",
        "bracketSpacing": false,
        "printWidth": 250
    },
    "mocha": {
        "exit": true,
        "recursive": true,
        "require": [
            "test/mocha.env",
            "ts-node/register",
            "source-map-support/register"
        ]
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "temp-dir": "./coverage",
        "reporter": [
            "lcov",
            "text"
        ]
    }
}
